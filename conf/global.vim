set number
set relativenumber
set scrolloff=5
set softtabstop=4
set shiftwidth=4
set autoindent
filetype plugin indent on
syntax on
syntax enable
let mapleader = " "
map <Space> <nop>
" use jj to escape insert mode.
let g:better_escape_shortcut = 'jk'
" set time interval to 200 ms
let g:better_escape_interval = 150
